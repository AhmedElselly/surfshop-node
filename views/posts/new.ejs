<% layout('layouts/boilerplate') -%>



<div class="container center">
    <h1>Add New Post</h1>

    <form action="/posts" method="POST" enctype="multipart/form-data">
        <div class="form-group col-md-16">
            <input type="text" class="form-control" name="post[title]" placeholder="Title">
        </div>

        <div class="form-group col-md-16">
            <input type="number" class="form-control" step=".01" name="post[price]" placeholder="Price">
        </div>

        <div class="form-group col-md-16">
            <input type="file" accept="images/*" name="images" multiple>
        </div>

        <div class="form-group col-md-16">
            <textarea name="post[description]" class="form-control" placeholder="Description"></textarea>
        </div>
        
        <div class="form-group col-md-16">
            <input type="text" class="form-control" name="post[location]" placeholder="Location">
        </div>

        <input type="submit" value="Add Post" class="btn btn-primary">
    </form>

</div>